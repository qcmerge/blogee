<div class="row">
  <div class="col-md-12">
    <div id="title">
      <h1><%= @post.title %></h1>
      <%= link_to "Edit Post", edit_post_path(@post) %>
      <%= link_to "Delete Post", @post, method: :delete %>
    </div>
    <div id="author">
      <p>By: <%= @post.author %></p>
      <p><%= @post.created_at.to_s(:short) %></p>
    </div>
    <div id="content">
      <p><%= @post.content %></p>
    </div>
    <div class="comments">
      <%= link_to 'Add Comment', new_post_comment_path(@post) %>
      <%- @post.comments.each do |comment| %>
        <div class="row" id="comment">
	  <%= link_to comment.author, post_comment_path(@post, comment) %>
          <p><%= comment.content %></p>
	</div>
      <% end %>
    </div>
  </div>
</div>
